{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxlint/main/npm/oxlint/configuration_schema.json",
  "plugins": ["import", "vitest"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn"
  },
  "rules": {
    "eslint/no-unused-vars": "off",
    "eslint/no-unused-expressions": "off",
    "eslint/no-control-regex": "off",
    "eslint-plugin-jest/expect-expect": "off",
    "eslint-plugin-jest/no-standalone-expect": "off",
    "eslint-plugin-jest/no-conditional-expect": "off",
    "eslint-plugin-jest/valid-title": "off",
    "eslint-plugin-import/no-unassigned-import": "off"
  },
  "ignorePatterns": ["**/build/**", "**/node_modules/**", "**/*.d.ts", "**/__examples/**"]
}
