// @libra
{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node-lts/tsconfig.json"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    // Package
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Output
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    // DX
    "moduleDetection": "force",
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "noErrorTruncation": true,
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false, // Great for conditional middlewares
    "paths": {
      // Core (Level -1)
      "#arr": ["./src/core/arr/_.ts"],
      "#arr/arr": ["./src/core/arr/__.ts"],
      "#bool": ["./src/core/bool/_.ts"],
      "#bool/bool": ["./src/core/bool/__.ts"],
      "#err": ["./src/core/err/_.ts"],
      "#err/err": ["./src/core/err/__.ts"],
      "#fn": ["./src/core/fn/_.ts"],
      "#fn/fn": ["./src/core/fn/__.ts"],
      "#fn/core": ["./src/core/fn/core/_.ts"],
      "#fn/core/fn/core": ["./src/core/fn/core/__.ts"],
      "#lang": ["./src/core/lang/_.ts"],
      "#lang/lang": ["./src/core/lang/__.ts"],
      "#lang/core": ["./src/core/lang/core/_.ts"],
      "#lang/core/lang/core": ["./src/core/lang/core/__.ts"],
      "#null": ["./src/core/null/_.ts"],
      "#null/null": ["./src/core/null/__.ts"],
      "#obj": ["./src/core/obj/_.ts"],
      "#obj/obj": ["./src/core/obj/__.ts"],
      "#pat": ["./src/core/pat/_.ts"],
      "#pat/pat": ["./src/core/pat/__.ts"],
      "#rec": ["./src/core/rec/_.ts"],
      "#rec/rec": ["./src/core/rec/__.ts"],
      "#str": ["./src/core/str/_.ts"],
      "#str/str": ["./src/core/str/__.ts"],
      "#ts": ["./src/core/ts/_.ts"],
      "#ts/ts": ["./src/core/ts/__.ts"],
      "#ts/test": ["./src/core/ts/test/__.ts"],
      "#tup": ["./src/core/tup/_.ts"],
      "#tup/tup": ["./src/core/tup/__.ts"],
      "#undefined": ["./src/core/undefined/_.ts"],
      "#undefined/undefined": ["./src/core/undefined/__.ts"],

      // Level 0+
      "#assert": ["./src/assert/_.ts"],
      "#assert/assert": ["./src/assert/__.ts"],
      "#bldr": ["./src/bldr/_.ts"],
      "#bldr/bldr": ["./src/bldr/__.ts"],
      "#cache": ["./src/cache/_.ts"],
      "#cache/cache": ["./src/cache/__.ts"],
      "#cli": ["./src/cli/_.ts"],
      "#cli/cli": ["./src/cli/__.ts"],
      "#codec": ["./src/codec/_.ts"],
      "#codec/codec": ["./src/codec/__.ts"],
      "#color": ["./src/color/_.ts"],
      "#color/color": ["./src/color/__.ts"],
      "#config-manager": ["./src/config-manager/_.ts"],
      "#config-manager/config-manager": ["./src/config-manager/__.ts"],
      "#configurator": ["./src/configurator/_.ts"],
      "#configurator/configurator": ["./src/configurator/__.ts"],
      "#debug": ["./src/debug/_.ts"],
      "#debug/debug": ["./src/debug/__.ts"],
      "#fs": ["./src/fs/_.ts"],
      "#fs/fs": ["./src/fs/__.ts"],
      "#fs-relative": ["./src/fs-relative/_.ts"],
      "#fs-relative/fs-relative": ["./src/fs-relative/__.ts"],
      "#glo": ["./src/glo/_.ts"],
      "#glo/glo": ["./src/glo/__.ts"],
      "#group": ["./src/group/_.ts"],
      "#group/group": ["./src/group/__.ts"],
      "#html": ["./src/html/_.ts"],
      "#html/html": ["./src/html/__.ts"],
      "#http": ["./src/http/_.ts"],
      "#http/http": ["./src/http/__.ts"],
      "#idx": ["./src/idx/_.ts"],
      "#idx/idx": ["./src/idx/__.ts"],
      "#json": ["./src/json/_.ts"],
      "#json/json": ["./src/json/__.ts"],
      "#jsonc": ["./src/jsonc/_.ts"],
      "#jsonc/jsonc": ["./src/jsonc/__.ts"],
      "#optic": ["./src/core/optic/_.ts"],
      "#optic/optic": ["./src/core/optic/__.ts"],
      "#log": ["./src/log/_.ts"],
      "#log/log": ["./src/log/__.ts"],
      "#manifest": ["./src/manifest/_.ts"],
      "#manifest/manifest": ["./src/manifest/__.ts"],
      "#mask": ["./src/mask/_.ts"],
      "#mask/mask": ["./src/mask/__.ts"],
      "#name": ["./src/name/_.ts"],
      "#name/name": ["./src/name/__.ts"],
      "#num": ["./src/num/_.ts"],
      "#num/num": ["./src/num/__.ts"],
      "#package-manager": ["./src/package-manager/_.ts"],
      "#package-manager/package-manager": ["./src/package-manager/__.ts"],
      "#paka": ["./src/paka/_.ts"],
      "#paka/paka": ["./src/paka/__.ts"],
      "#pro": ["./src/pro/_.ts"],
      "#pro/pro": ["./src/pro/__.ts"],
      "#prom": ["./src/prom/_.ts"],
      "#prom/prom": ["./src/prom/__.ts"],
      "#prox": ["./src/prox/_.ts"],
      "#prox/prox": ["./src/prox/__.ts"],
      "#ref": ["./src/ref/_.ts"],
      "#ref/ref": ["./src/ref/__.ts"],
      "#resource": ["./src/resource/_.ts"],
      "#resource/resource": ["./src/resource/__.ts"],
      "#sch": ["./src/sch/_.ts"],
      "#sch/sch": ["./src/sch/__.ts"],
      "#semver": ["./src/semver/_.ts"],
      "#semver/semver": ["./src/semver/__.ts"],
      "#syn": ["./src/syn/_.ts"],
      "#syn/syn": ["./src/syn/__.ts"],
      "#test": ["./src/test/_.ts"],
      "#test/test": ["./src/test/__.ts"],
      "#time": ["./src/time/_.ts"],
      "#time/time": ["./src/time/__.ts"],
      "#tree": ["./src/tree/_.ts"],
      "#tree/tree": ["./src/tree/__.ts"],
      "#url": ["./src/url/_.ts"],
      "#url/url": ["./src/url/__.ts"],
      "#value": ["./src/value/_.ts"],
      "#value/value": ["./src/value/__.ts"],
      "#ware": ["./src/ware/_.ts"],
      "#ware/ware": ["./src/ware/__.ts"],
      "#mod": ["./src/mod/_.ts"],
      "#mod/mod": ["./src/mod/__.ts"],
      "#oak": ["./src/oak/_.ts"],
      "#oak/oak": ["./src/oak/__.ts"],
      "#deps/effect": ["./src/deps/effect.ts"],

      // Platform and wildcard
      "#platform:lang/*": ["./src/core/lang/*.node.ts"],
      "#*": ["./src/*"]
    },

    // DX covered by linter:
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // DX for Downstream
    "isolatedModules": true, // performance
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["build", "articles", "src-new", "src-temp", "**/*.bench-d.ts"]
}
