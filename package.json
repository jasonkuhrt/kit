{
  "name": "@kouka/workspace",
  "private": true,
  "type": "module",
  "author": {
    "name": "Jason Kuhrt",
    "url": "https://kuhrt.me"
  },
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:packages:affected": "turbo run build --filter='./packages/*...[origin/main]'",
    "fix:format": "dprint fmt",
    "check:format": "dprint check",
    "check:lint:packages": "turbo run check:lint --filter='./packages/*'",
    "check:lint:packages:affected": "turbo run check:lint --filter='./packages/*...[origin/main]'",
    "check:types:packages": "turbo run check:types --filter='./packages/*'",
    "check:types:packages:affected": "turbo run check:types --filter='./packages/*...[origin/main]'",
    "check:package:packages": "turbo run check:package --filter='./packages/*'",
    "check:package:packages:affected": "turbo run check:package --filter='./packages/*...[origin/main]'",
    "test:unit:packages": "turbo run test:unit --filter='./packages/*'",
    "test:unit:packages:affected": "turbo run test:unit --filter='./packages/*...[origin/main]'",
    "release": "changeset publish",
    "check": "pnpm check:format && pnpm check:types:packages && pnpm check:lint:packages && pnpm check:package:packages",
    "fix": "pnpm fix:format"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@tsconfig/node-lts": "^24.0.0",
    "@tsconfig/strictest": "^2.0.8",
    "dprint": "^0.50.2",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3"
  }
}
