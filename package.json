{
  "name": "@kouka/workspace",
  "private": true,
  "type": "module",
  "author": {
    "name": "Jason Kuhrt",
    "url": "https://kuhrt.me"
  },
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "build:affected": "turbo run build --filter='./packages/*...[origin/main]'",
    "fix:format": "dprint fmt",
    "check:format": "dprint check",
    "check:lint": "turbo run check:lint --filter='./packages/*'",
    "check:lint:affected": "turbo run check:lint --filter='./packages/*...[origin/main]'",
    "check:types": "turbo run check:types --filter='./packages/*'",
    "check:types:affected": "turbo run check:types --filter='./packages/*...[origin/main]'",
    "check:publint": "turbo run check:package --filter='./packages/*'",
    "check:publint:affected": "turbo run check:package --filter='./packages/*...[origin/main]'",
    "test": "turbo run test --filter='./packages/*'",
    "test:affected": "turbo run test --filter='./packages/*...[origin/main]'",
    "release": "changeset publish",
    "check": "pnpm check:format && pnpm check:types && pnpm check:lint && pnpm check:publint",
    "fix": "pnpm fix:format"
  },
  "devDependencies": {
    "@ark/attest": "^0.56.0",
    "@ark/attest-ts-default": "npm:typescript@^5.9.3",
    "@changesets/cli": "^2.29.8",
    "@tsconfig/node-lts": "^24.0.0",
    "@tsconfig/strictest": "^2.0.8",
    "dprint": "^0.50.2",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
