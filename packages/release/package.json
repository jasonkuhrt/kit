{
  "name": "@kitz/release",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "imports": {
    "#release": "./build/_.js",
    "#release/*": "./build/*.js"
  },
  "exports": {
    ".": "./build/_.js",
    "./__": "./build/__.js"
  },
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "dev": "tsgo -p tsconfig.build.json --watch",
    "check:types": "tsgo --noEmit",
    "check:lint": "oxlint --config ../../oxlint.json src/",
    "check:package": "publint && attw --pack --ignore-rules no-resolution cjs-resolves-to-esm"
  },
  "dependencies": {
    "@effect/platform": "^0.82.8",
    "@kitz/changelog": "workspace:*",
    "@kitz/conventional-commits": "workspace:*",
    "@kitz/core": "workspace:*",
    "@kitz/env": "workspace:*",
    "@kitz/fs": "workspace:*",
    "@kitz/git": "workspace:*",
    "@kitz/npm-registry": "workspace:*",
    "@kitz/semver": "workspace:*",
    "effect": "^3.19.13"
  }
}
