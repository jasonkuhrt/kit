{
  "name": "@kouka/ware",
  "version": "0.0.0",
  "description": "Middleware utilities",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./build/_.js",
    "./__": "./build/__.js"
  },
  "dependencies": {
    "@kouka/bldr": "workspace:*",
    "@kouka/config-manager": "workspace:*",
    "@kouka/configurator": "workspace:*",
    "@kouka/core": "workspace:*",
    "@kouka/log": "workspace:*",
    "type-fest": "^5.3.1"
  },
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "dev": "tsgo -p tsconfig.build.json --watch",
    "check:types": "tsgo --noEmit",
    "check:lint": "oxlint --config ../../oxlint.json src/",
    "check:package": "publint && attw --pack"
  }
}
