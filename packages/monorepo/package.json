{
  "name": "@kitz/monorepo",
  "version": "0.0.0-kitz-release",
  "type": "module",
  "sideEffects": false,
  "imports": {
    "#monorepo": "./build/_.js",
    "#monorepo/*": "./build/*.js"
  },
  "exports": {
    ".": "./build/_.js",
    "./__": "./build/__.js"
  },
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "dev": "tsgo -p tsconfig.build.json --watch",
    "check:types": "tsgo --noEmit",
    "check:lint": "oxlint --config ../../oxlint.json src/",
    "check:package": "publint && attw --pack"
  },
  "dependencies": {
    "@effect/platform": "^0.94.0",
    "@kitz/core": "workspace:*",
    "@kitz/env": "workspace:*",
    "@kitz/fs": "workspace:*",
    "@kitz/pkg": "workspace:*",
    "@kitz/resource": "workspace:*",
    "effect": "^3.19.5",
    "yaml": "^2.7.1"
  }
}
