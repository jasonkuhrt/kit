{
  "name": "@kitz/config-manager",
  "version": "0.0.0",
  "description": "Configuration file management",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./build/_.js",
    "./__": "./build/__.js"
  },
  "dependencies": {
    "@kitz/core": "workspace:*",
    "effect": "^3.0.0",
    "type-fest": "*"
  },
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "dev": "tsgo -p tsconfig.build.json --watch",
    "check:types": "tsgo --noEmit",
    "check:lint": "oxlint --config ../../oxlint.json src/",
    "check:package": "publint && attw --pack"
  }
}
